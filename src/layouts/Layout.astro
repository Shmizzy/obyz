---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Obyz Technologies - Affordable Website Design Agency"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary: 123, 31, 162;
    --primary-light: 157, 78, 221;
    --dark: 13, 15, 26;
    --gradient: linear-gradient(
      45deg,
      rgb(var(--primary)),
      rgb(var(--primary-light)) 30%,
      #ff6b6b 60%
    );
  }

  html {
    font-family: "Inter", system-ui, sans-serif;
    background: var(--dark);
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    padding: 0;
  }
  * {
    box-sizing: border-box;
  }
</style>
