<style>
    .features {
        padding: 8rem 2rem;
        position: relative;
        background: linear-gradient(to bottom, rgba(13, 12, 17, 0.8), rgba(13, 12, 17, 0.95));
        overflow: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    h2 {
        text-align: center;
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    .features-subtitle {
        text-align: center;
        color: #94a3b8;
        font-size: 1.25rem;
        margin-bottom: 4rem;
        opacity: 0.8;
    }

    .gradient-text {
        background: linear-gradient(135deg, #a855f7 0%, #ff6b6b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.03);
        padding: 2.5rem;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
    }

    .feature-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(255, 107, 107, 0.1));
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .feature-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transition: left 0.8s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px) scale(1.02);
        border-color: rgba(168, 85, 247, 0.3);
        box-shadow: 0 10px 30px rgba(168, 85, 247, 0.1);
    }

    .feature-card:hover::before {
        opacity: 1;
    }

    .feature-card:hover .feature-shine {
        left: 100%;
    }

    .icon-wrapper {
        margin-bottom: 1.5rem;
        position: relative;
        width: fit-content;
    }

    .icon {
        font-size: 2.5rem;
        position: relative;
        z-index: 1;
        filter: drop-shadow(0 0 15px rgba(168, 85, 247, 0.3));
    }

    h3 {
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 1rem 0;
        position: relative;
    }

    p {
        color: #a1a1aa;
        margin: 0;
        line-height: 1.6;
        font-size: 1rem;
        position: relative;
    }

    @media (max-width: 768px) {
        .features {
            padding: 6rem 1rem;
        }

        .features-grid {
            gap: 1.5rem;
        }

        .feature-card {
            padding: 2rem;
        }

        .features-subtitle {
            font-size: 1.1rem;
            margin-bottom: 3rem;
        }
    }

    /* Add subtle animated gradient background */
    .features::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 20%, rgba(168, 85, 247, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 80% 80%, rgba(255, 107, 107, 0.15) 0%, transparent 40%);
        opacity: 0.5;
        z-index: 1;
        pointer-events: none;
    }
</style>