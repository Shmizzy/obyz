---
const teamMembers = [
    {
        name: "Israel Lopez",
        position: "CEO & Founder",
        image: "https://media.licdn.com/dms/image/v2/D5603AQEar1Jyk9pZZw/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1718287884798?e=1736985600&v=beta&t=ijgURNzsuzmrDVAjBPntZCod1RYMabyWIUjwwMYPjgc",
        linkedin: "https://linkedin.com",
        bio: "5+ years of experience in web and mobile development"
    },
    {
        name: "Michael Chen",
        position: "Lead Developer",
        image: "https://picsum.photos/400/400?random=2",
        linkedin: "https://linkedin.com",
        bio: "Full-stack expert specialized in scalable applications"
    },
    {
        name: "Emma Rodriguez",
        position: "UI/UX Designer",
        image: "https://picsum.photos/400/400?random=3",
        linkedin: "https://linkedin.com",
        bio: "Creating beautiful, user-centered digital experiences"
    },
];
---

<section id="team" class="team">
    <div class="container">
        <h2>Meet Our <span class="gradient-text">Team</span></h2>
        <p class="team-subtitle">Passionate experts bringing your digital vision to life</p>
        
        <div class="team-grid">
            {
                teamMembers.map((member) => (
                    <div class="team-card">
                        <div class="member-image">
                            <img src={member.image} alt={member.name} loading="lazy" />
                            <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="linkedin-overlay">
                                <svg class="linkedin-icon" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                                </svg>
                            </a>
                        </div>
                        <div class="member-info">
                            <h3>{member.name}</h3>
                            <span class="position">{member.position}</span>
                            <p>{member.bio}</p>
                        </div>
                        <div class="card-shine"></div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .team {
        padding: 8rem 2rem;
        background: linear-gradient(to bottom, rgba(13, 12, 17, 0.8), rgba(13, 12, 17, 0.95));
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    h2 {
        text-align: center;
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    .team-subtitle {
        text-align: center;
        color: #94a3b8;
        font-size: 1.25rem;
        margin-bottom: 4rem;
        opacity: 0.8;
    }

    .gradient-text {
        background: linear-gradient(135deg, #a855f7 0%, #ff6b6b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2.5rem;
    }

    .team-card {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .team-card:hover {
        transform: translateY(-5px);
        border-color: rgba(168, 85, 247, 0.3);
        box-shadow: 0 10px 30px rgba(168, 85, 247, 0.1);
    }

    .member-image {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
    }

    .member-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .linkedin-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(168, 85, 247, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.4s ease;
    }

    .linkedin-icon {
        width: 2.5rem;
        height: 2.5rem;
        color: white;
        transform: translateY(20px);
        transition: transform 0.4s ease;
    }

    .team-card:hover .linkedin-overlay {
        opacity: 1;
    }

    .team-card:hover .linkedin-icon {
        transform: translateY(0);
    }

    .team-card:hover img {
        transform: scale(1.1);
    }

    .member-info {
        padding: 1.5rem;
        text-align: center;
    }

    h3 {
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .position {
        color: #a855f7;
        font-size: 0.9rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        display: block;
        margin-bottom: 1rem;
    }

    p {
        color: #94a3b8;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
    }

    .card-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transition: left 0.8s ease;
    }

    .team-card:hover .card-shine {
        left: 100%;
    }

    /* Add subtle animated gradient background */
    .team::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 20%, rgba(168, 85, 247, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 80% 80%, rgba(255, 107, 107, 0.15) 0%, transparent 40%);
        opacity: 0.5;
        z-index: 1;
        pointer-events: none;
    }

    @media (max-width: 768px) {
        .team {
            padding: 6rem 1rem;
        }

        .team-grid {
            gap: 1.5rem;
        }

        .team-subtitle {
            font-size: 1.1rem;
            margin-bottom: 3rem;
        }
    }
</style>